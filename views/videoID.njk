{% extends layout %}
{% block content %}

<main>
    <h1> {{ message }} </h1>
    <div class="d-flex justify-content-center p-left-right-20">
        <div class="video-container">
            {% for item in items %}
                <iframe class="responsive-iframe" src="https://www.youtube.com/embed/{{ item.videoID }}"></iframe>
            {% endfor %}
        </div>
    </div>
    <h1>Average rating: {{ average_rating }}</h1>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ratingModal">
        Rate video
    </button>
    <div class="modal fade" id="ratingModal" tabindex="-1" aria-labelledby="ratingModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="ratingModalLabel">Rate video</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/videos/{{ items[0].id }}/rate" method="post">
                    <input class="form-control" type="text" placeholder="Rating goes here" aria-label="default input example" name="rating">
                    {% if username %}
                      <button class="btn btn-success" type="submit">Rate</button>
                    {% else %}
                      <button title="Must be logged in to post video" class="btn btn-success disabled" type="submit">Post</button>
                      <i class="d-block">You must be logged in to rate a video</i>
                    {% endif %}

                </form>
            </div>
          </div>
        </div>
      </div>
</main>

{% endblock %}