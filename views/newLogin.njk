{% extends "layout.njk" %}
{% block content %}

<main class="form-signin">
    <form action="/login" method="post">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error }}</div>
         {% endif %}
        <div class="h-3 input-group">
            <input type="text" class="form-control" id="floatingInput" placeholder="Username" name="username" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="h-3 input-group">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
        </div>

        <button class="w-100 mt-3 btn btn-lg btn-primary" type="submit">Sign in</button>
        <a href="/register">Need to register?</a>
    </form>
</main>
{% endblock %}