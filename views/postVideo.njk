{% extends layout %}
{% block content %}


<main class="form-signin">
    <form action="/videos/post" method="post">
        <h1 class="h3 mb-3 fw-normal">Post a video</h1>

        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error }}</div>
         {% endif %}
        <div class="h-3 input-group">
            <input required class="form-control" type="text" placeholder="Video URL" aria-label="default input example" name="videourl">
        </div>

        <button class="w-100 mt-3 btn btn-lg btn-primary" type="submit">Post a video</button>
    </form>
</main>

{% endblock %}