{% extends "layout.njk" %}
{% block  content %}
    <div class="container">
        <h1> Displaying user page for {{ username }} </h1>
        <h2>Uploaded videos</h2>
        <div class="row">
            {% for item in data %}
                <div class="col-sm-4 d-flex justify-content-center">
                    <a class="card-link" href="/videos/{{ item.videoID }}">
                        <div class="card" style="width: 18rem;">
                            <img src="{{ item.thumbnailurl }}" class="card-img-top" alt="thumbnail">
                            <div class="card-body">
                                <h5 class="card-title">{{ item.videoTitle }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}