{% extends layout %}
{% block content %}

<main>
    <h1> {{ message }} </h1>
    <div class="container">
        <div class="row">
            {% for item in items %}
                <div class="col-sm-4 d-flex justify-content-center">
                    <a class="card-link" href="/videos/{{ item.videoID }}">
                        <div class="card" style="width: 18rem;">
                            <img src="{{ item.thumbnailurl }}" class="card-img-top" alt="thumbnail">
                            <div class="card-body">
                                <h5 class="card-title">{{ item.videoTitle }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</main>

{% endblock %}