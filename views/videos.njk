{% extends layout %}
{% block content %}

<main>
    <div class="container">
        <div class="row">
            {% for item in items %}
                <div class="video-card d-flex justify-content-center">
                    <a class="card-link" href="/videos/{{ item.videoID }}">
                        <div class="card">
                            <img src="{{ item.thumbnailurl }}" class="card-img-top" alt="{{ item.videoTitle }} thumbnail">
                            <div class="card-body">
                                <h5 class="card-title video-title">{{ item.videoTitle }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</main>

{% endblock %}