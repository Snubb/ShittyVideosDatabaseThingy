{% extends layout %}
{% block content %}

<main>
    <h1> {{ message }} </h1>
    <div class="container">
        <div class="row">
            {% for item in items %}
                <div class="col-sm-4">
                    <div class="card" style="width: 18rem;">
                        <a href="/videos/{{ item.id }}"><img src="{{ item.thumbnailurl }}" class="card-img-top" alt="thumbnail"></a>
                        <div class="card-body">
                            <h5 class="card-title">{{ item.videoTitle }}</h5>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


</main>

{% endblock %}